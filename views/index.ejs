<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>
<main class="container">
    <h1>UpLoad Manager</h1>
    <hr>
   
    <section class="row mb-3">
      <div class="d-flex justify-content-between">
        <h2>Productos con una imagen</h2>
        
        <a href="/products/add-one-image" class="btn btn-outline-dark">Agregar Imagen</a>

      </div>
    </section>
    <section class="row">
      <% productsOneImage.forEach(product => { %>
        <div class= "col-12 col-md-4 col-lg-3">
          <%- include('./partials/cardOneImage',{
            ...product
          }) %>
          </div>
      <% }) %>
      
    </section>
    <hr>
    <div class="d-flex justify-content-between mt-5" >
      <h2>Productos con varias imagenes</h2>
      
      <a href="/products/add-multiple-images" class="btn btn-outline-dark">Agregar Imagen</a>

    </div>
  
    <section class="row mb-5" >
    
      <% productsMultipleImages.forEach(product => { %>
        <div class= "col-12 col-md-4 col-lg-3">
          <%- include('./partials/cardMultipleImages',{
            //paso como segundo parametro den un obj las propiedades del producto propagado
            ...product
          }) %>
          </div>
      <% }) %>

        
    
    </section>
    <hr>
    <div class="d-flex justify-content-between mt-5" >
      <h2>Productos con una imagen principal y varias imagenes secundarias</h2>
      
      <a href="/products/add-multiple-images" class="btn btn-outline-dark">Agregar Imagen</a>

    </div>
  
    <section class="row mb-5" >
    
      <% productsMultipleImages.forEach(product => { %>
        <div class= "col-12 col-md-4 col-lg-3">
          <%- include('./partials/cardMultipleImages',{
            //paso como segundo parametro den un obj las propiedades del producto propagado
            ...product
          }) %>
          </div>
      <% }) %>

        
    
    </section>
  </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
